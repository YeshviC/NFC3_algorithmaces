    transition: background-color 0.3s ease;
}

.navbar ul li a:hover {
    background-color: #e67e22; /* Slightly darker orange */
}

.navbar .burger-menu {
    display: none;
    flex-direction: column;
    cursor: pointer;
    z-index: 1100;
}

.navbar .burger-menu div {
    width: 25px;
    height: 3px;
    background-color: #fff;
    margin: 3px 0;
    transition: 0.3s;
}

.sidebar {
    height: 100%;
    width: 250px;
    position: fixed;
    top: 60px; /* Below the navbar */
    right: -250px;
    background-color: #f39c12; /* Match navbar color */
    overflow-x: hidden;
    transition: 0.3s;
    box-shadow: -2px 0 5px rgba(0, 0, 0, 0.2);
    z-index: 1000;
}

.sidebar a {
    padding: 15px 20px;
    text-decoration: none;
    font-size: 18px;
    color: #fff;
    display: block;
    transition: background-color 0.3s ease;
}

.sidebar a:hover {
    background-color: #e67e22; /* Slightly darker orange */
}

.open-sidebar {
    right: 0;
}


